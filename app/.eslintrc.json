{
    "env": {
        "browser": true,
        "es2021": true,
		"jest": true,
		"cypress/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
		"cypress"
    ],
    "rules":{
        "indent": [2, "tab"],
        "no-tabs": 0
    }
}
